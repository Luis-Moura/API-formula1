{
  "name": "node-blue-boilerplate",
  "version": "1.0.0",
  "description": "Uma API simples para fornecer informações sobre equipes e pilotos de Fórmula 1. Ela foi construída com Fastify e TypeScript.",
  "main": "server.ts",
  "scripts": {
    "dist": "tsup src",
    "start:dev": "tsx --env-file=.env src/server.ts",
    "start:watch": "tsx watch --env-file=.env  src/server.ts",
    "start:dist": "npm run dist && node --env-file=.env dist/server.js"
  },
  "keywords": [],
  "author": "Luis Moura",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "fastify": "^4.26.2"
  }
}
